CC = g++
CFLAGS = -std=c++17
INCLUDE = -I ${HOME}/Library/asio-1.18.2/include -I ${HOME}/Library/Tsukuyomi/include
FRAMEWORKS = -F /Library/Frameworks -F ${HOME}/Library/Frameworks
LINKER_FLAGS = -framework SDL2 -framework SDL2_image -framework SDL2_ttf -framework SDL2_mixer -L ${HOME}/Library/Tsukuyomi/Tsukuyomi.a
SOURCES = main.cpp ui/test_menu.cpp engine/game/pong.cpp services/client.cpp
SOURCE_OBJECT_FILES = $(shell basename -a ${SOURCES:.cpp=.o})
TARGET = pong_client

build: compile link

compile:
	@echo "\nCompiling App..."
	${CC} -c $(patsubst %, src/%, $(SOURCES)) ${INCLUDE} ${FRAMEWORKS} ${CFLAGS}
	mv ${SOURCE_OBJECT_FILES} build/

link:
	@echo "\nLinking App..."
	${CC} -o ${TARGET} $(patsubst %, build/%, ${SOURCE_OBJECT_FILES}) ${FRAMEWORKS} ${LINKER_FLAGS}
	mv ${TARGET} build/

run:
	@echo "\nRunning App..."
	build/${TARGET}

cleanup:
	@echo "\nCleaning up App..."
	rm $(patsubst %, build/%, ${SOURCE_OBJECT_FILES})
